<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="android.tvz.hr.fitnessclienttracker.onboarding.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_logIn"
            app:destination="@id/logIn"
            app:enterAnim="@anim/slide_in_right" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="android.tvz.hr.fitnessclienttracker.onboarding.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_logIn"
            app:destination="@id/logIn"
            app:enterAnim="@anim/slide_in_right"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/logIn"
        android:name="android.tvz.hr.fitnessclienttracker.ui.LogIn"
        android:label="LogIn" >
        <action
            android:id="@+id/action_logIn_to_registerUser"
            app:destination="@id/registerUser" />
    </fragment>
    <fragment
        android:id="@+id/registerUser"
        android:name="android.tvz.hr.fitnessclienttracker.ui.register.RegisterUser"
        android:label="RegisterUser" />
</navigation>